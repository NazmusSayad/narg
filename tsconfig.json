{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "inlineSourceMap": false,
    "strict": true,
    "pretty": true,
    "removeComments": true
  },
  "include": ["./src"]
}
